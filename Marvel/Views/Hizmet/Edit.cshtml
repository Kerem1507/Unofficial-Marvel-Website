@model Marvel.Models.Model.Hizmet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br /><br />
<h2 style="margin-left:200px;">Ürün Düzenle</h2>

<div class="form" style="margin-left:150px;">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Edit/@Model.HizmetId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Başlığı <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Ürün Açıklaması <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Aciklama" required class="ckeditor">@Model.Aciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Eski Resim </label>
            <div class="col-lg-6">
                <img src="@Model.ResimURL" height="150" width="150"/>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Ürün Resmi </label>
            <div class="col-lg-6">
                <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
            </div>
        </div>

        @*<div class="form-group ">
            <label for="ccomment" class="control-label col-lg-2">Feedback</label>
            <div class="col-lg-10">
                <textarea class="form-control " id="ccomment" name="comment" required></textarea>
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-danger" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>

