
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<br /><br /><br />

<h2 style="margin-left:200px;"><b>Yeni Ürün Ekle</b></h2>
<br />

<div class="form" style="margin-left:150px;">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Create/" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Başlığı <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Ürün Açıklaması <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Aciklama" required class="ckeditor"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Ürün Resmi <span class="required">*</span></label>
            <div class="col-lg-6">
                <input type="file" required class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
            </div>
        </div>

        @*<div class="form-group ">
                <label for="ccomment" class="control-label col-lg-2">Feedback</label>
                <div class="col-lg-10">
                    <textarea class="form-control " id="ccomment" name="comment" required></textarea>
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-danger" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>

