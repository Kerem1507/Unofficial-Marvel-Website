@model IEnumerable<Marvel.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br /><br />
<h2 style="margin-left:200px;">Ürünler</h2>
<br />
<a class="btn btn-primary" href="/Hizmet/Create/" style="margin-left:200px;"><b>Yeni Ürün Ekle</b></a>
<br /><br />
<table class="table table-striped" style="margin-left:200px;">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Açıklaması</th>
            <th>Ürün Resmi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL"/></td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Düzenle</a>  | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }

    </tbody>
</table>

