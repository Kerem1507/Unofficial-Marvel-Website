@model IEnumerable<Marvel.Models.Model.Hizmet>
@{
    ViewBag.Title = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <div class="row">
                        <section id="projects">
                            <ul id="thumbs" class="portfolio">
                                <!-- Item Project and Filter Name -->

                                @foreach (var item in Model)
                                {
                                    <li class="item-thumbs col-lg-3 design" data-id="id-0" data-type="web">
                                        <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                                        <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="@item.Baslik" href="@item.ResimURL">
                                            <span class="overlay-img"></span>
                                            <span class="overlay-img-thumb font-icon-plus"></span>

                                        </a>
                                        <!-- Thumb Image and Description -->
                                        <img src="@item.ResimURL" alt="@item.Aciklama" style="color:white;">

                                    </li>
                                }

                            </ul>
                        </section>
                    </div>

                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-2">
                    <h4>Formu doldurarak <strong>siparişinizi verebilirsiniz!</strong></h4>

                    <div class="alert alert-info">@ViewBag.Uyari</div>
                    <div id="errormessage"></div>
                    <form action="/Home/Hizmetlerimiz" method="post" role="form" class="contactForm">
                        <div class="form-group">
                            <input type="text" name="adsoyad" class="form-control" id="name" placeholder="İsim Soyisim" data-rule="minlen:4" data-msg="Lütfen en az 4 karakter giriniz!" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-rule="email" required />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="adres" rows="5" data-rule="required" required placeholder="Adres"></textarea>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <label for="cars" class="form-control">Ürün</label>
                            <select id="urun" name="urun">
                                @foreach (var siparis in Model)
                                {
                                    <option>@siparis.Baslik</option>
                                }
                            </select>
                        </div>
                        <div class="text-center" style="margin-left:200px;"><button type="submit" class="btn btn-theme">Formu Gönder</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section>


