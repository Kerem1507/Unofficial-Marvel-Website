
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

    <section id="content">
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.4466689350907!2d-73.99563518497226!3d40.75219957932748!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259ade57d7e99%3A0x386f11d48c2ada84!2s8th%20Ave%2C%20New%20York%2C%20NY%2C%20Amerika%20Birle%C5%9Fik%20Devletleri!5e0!3m2!1str!2str!4v1598436501009!5m2!1str!2str" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
        <div class="container">
            <div class="row" >
                <div class="col-md-6 col-md-offset-2">
                    <h4>İletişim formunu doldurarak <strong>bizimle iletişime geçebilirsiniz!</strong></h4>

                    <div class="alert alert-info">@ViewBag.Uyari</div>
                    <div id="errormessage"></div>
                    <form action="/Home/Iletisim" method="post" role="form" class="contactForm">
                        <div class="form-group">
                            <input type="text" name="adsoyad" class="form-control" id="name" placeholder="İsim Soyisim" data-rule="minlen:4" data-msg="Lütfen en az 4 karakter giriniz!" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" data-rule="email" required />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" required />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="mesaj" rows="5" data-rule="required" required placeholder="Mesajınız"></textarea>
                            <div class="validation"></div>
                        </div>

                        <div class="text-center" style="margin-left:200px;"><button type="submit" class="btn btn-theme">Formu Gönder</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section>
