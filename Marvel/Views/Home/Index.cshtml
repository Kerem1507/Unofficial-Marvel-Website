<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Marvel Unofficial</h5>
                    <address>
                        <strong>Marvel HQ</strong><br>
                        @ViewBag.Iletisim.Adres<br>
                    </address>
                    <p>
                        <i class="icon-phone"></i>Telefon: @ViewBag.Iletisim.Telefon<br>
                        @*<i class="icon-phone"></i>WhatsApp: @ViewBag.Iletisim.Whatsapp<br>*@
