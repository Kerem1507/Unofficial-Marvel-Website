@model IEnumerable<Marvel.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>*@

<br /><br /><br />
<h2 style="margin-left:200px;">Haber Kayıtları</h2>
<br />
<a style="margin-left:200px;" class="btn btn-primary" href="/Blog/Create/">Yeni Oluştur</a>
<br />
<table class="table table-striped" style="margin-left:200px;" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.Baslik</td>
            <td>@item.KategoriId</td>
            @*<td>@item.Kategori.KategoriAd</td>*@
            <td><img src="@item.ResimURL" width="100" height="100" /></td>
            <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId">Sil</a></td>
        </tr>
        }

    </tbody>
</table>

