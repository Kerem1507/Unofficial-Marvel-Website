@model Marvel.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<h2 style="margin-left:200px;">Kategori Düzenle</h2>
<br />
<div class="form" style="margin-left:200px;">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create/" enctype="multipart/form-data">*@

    @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-6">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-6">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group ">
            <br /><br />
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <br /><br />
                <img src="@Model.ResimURL" width="100" height="100" />
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group ">
            <br /><br /><br />
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-6">
                <br />
                <input type="file" class="form-control " name="ResimURL" accept=".jpg, .png, .jpeg" />
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group">
            <br /><br />
            <div class="col-lg-offset-2 col-lg-10">
                <br />
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-danger" type="button"><a href="/Blog/Index">İptal</a></button>
            </div>
        </div>
    }

    @*</form>*@
</div>