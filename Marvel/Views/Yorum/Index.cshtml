@model IEnumerable<Marvel.Models.Model.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br /><br />
<h2 style="margin-left:200px;">Yorumlar</h2>
<br /><br />

<p style="margin-left:200px;">
    <b>@Html.ActionLink("Yeni Yorum Ekle", "Create")</b>
</p>
<table class="table table-striped" style="margin-left:200px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Blog.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Blog.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Onay)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.YorumId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.YorumId }) |*@
            @Html.ActionLink("Sil", "Delete", new { id=item.YorumId })
        </td>
    </tr>
}

</table>
